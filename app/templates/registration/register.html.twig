{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="h3 mb-3 font-weight-normal">Créez votre compte : </h1>

    <h2 class="h3 mb-3 font-weight-normal">Informations personnelles :  </h2>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username, {
            label: 'Nom'
        }) }}
        {{ form_row(registrationForm.firstName, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.phone, {
            label: 'Téléphone'
        }) }}
        <h2 class="h3 mb-3 font-weight-normal">Informations d'authentification :  </h2>
        {{ form_row(registrationForm.email, {
            label: 'Adresse Email'
        }) }}
        {{ form_row(registrationForm.plainPassword.first)}}
        {{ form_row(registrationForm.plainPassword.second)}}


        <button type="submit" class="btn btn-lg btn-secondary mt-4">S'inscrire</button>
    {{ form_end(registrationForm) }}

    </div>
{% endblock %}
