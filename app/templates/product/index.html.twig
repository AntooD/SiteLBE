{% extends 'base.html.twig' %}

{% block title %}Nos produits
{% endblock %}

{% block body %}
</br>
</br>
</br>
    <div class="bg-light p-3">
        <h1>Nos produits</h1>
    </div>

    <div class="row">
        {% for product in products %}
            <div class="col-4 mt-4">
                <div class="border border-4 text-center border-dark rounded p-2 clearfix">
                    <img class="img-fluid rounded" src="{{ product.image }}" alt="Image de {{ product.title }}">
                    <h2>
                        {{ product.title }}
                        -
                        {{ product.price }}
                        €
                    </h2>
                    <hr>
                    <a href="{{ path('product_detail',{'id':product.id}) }}" class="btn btn-success float-right">
                        Voir l'article en détail
                    </a>
                    <a href="{{ path('cart_add',{'id':product.id}) }}" class="btn btn-success float-right">
                        Ajouter au panier
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
{% endblock %}
